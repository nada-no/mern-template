head
  title Node-Chat
  meta(charset='utf-8')
  link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css', integrity='sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm', crossorigin='anonymous')
  style .chat{background-color: #cce0ff;height: 40vh;overflow:auto;}
    
nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
  #navbarColor01.collapse.navbar-collapse
    ul.navbar-nav.mr-auto
      li.nav-item.active
        a.nav-link(href='/chat/list') Chat
      li.nav-item
        a.nav-link(href='/history/list') Historial
    a.my-2.my-lg-0.text-white(href='/logout') Log Out

block content
  .container.w-50.p-3
    .row
      .col.align-self-center
        h1.py-3 Chat
        p Bienvenido #{session.user.name} a la sala #{sala}!
        //- form(id="send" action="/" method="POST")
          //- select(id="xxx", name="xxxyyy")
          //-   -for(var i = 1;i<5;i++){
          //-   option(value="#{i}") Sala de chat #{i}
          //-   -}
        div.chat.rounded.p-3(id="chat") 
        input.w-75(type="text" id="msg" placeholder="" onfocus="this.value=''")
        button.btn.btn-primary.w-25(id="send") Enviar
  
  script(type='text/javascript', src='http://localhost:2000/socket.io/socket.io.js')
  script(type='text/javascript', src='/js/chat.js')
  script(type='text/javascript') var sala = #{sala}; var usuario = !{JSON.stringify(session.user)};

    